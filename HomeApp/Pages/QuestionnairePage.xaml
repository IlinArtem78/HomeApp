<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HomeApp.ViewModel"
             x:Class="HomeApp.Pages.QuestionnairePage"
             Title="Подбор шкафа">

    <ContentPage.BindingContext>
        <viewModels:QuestionnaireViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Динамический список вопросов -->
            <ListView ItemsSource="{Binding Questions}" 
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      IsEnabled="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Spacing="10">
                                <!-- Текст вопроса -->
                                <Label Text="{Binding Text}" 
                                       FontAttributes="Bold" 
                                       FontSize="Medium"/>

                                <!-- Варианты ответов (RadioButton) -->
                                <StackLayout BindableLayout.ItemsSource="{Binding Options}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton Content="{Binding .}"
                                                          IsChecked="{Binding SelectedOption, 
                                                                             Source={RelativeSource AncestorType={x:Type ViewCell}}, 
                                                                             Converter={StaticResource RadioButtonConverter}}"
                                                          GroupName="OptionsGroup"/>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Кнопка "Далее" -->
            <Button Text="Рассчитать стоимость" 
                    Command="{Binding NextCommand}"
                    HorizontalOptions="Center"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    Padding="30,10"/>

        </StackLayout>
    </ScrollView>
</ContentPage>